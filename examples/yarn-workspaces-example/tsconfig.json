{
    "compilerOptions": {
      /* Basic Options */
      "target": "es5",
      "module": "commonjs",
      "lib": ["ESNext", "DOM"],
  
      /* Strict Type-Checking Options */
      "strict": true,
  
      /* Module Resolution Options */
      "moduleResolution": "node",
      "esModuleInterop": true,
  
      /* Advanced Options */
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "composite": true
    },
    "references": [
        { "path": "./packages/backend" },
        { "path": "./packages/frontend" },
        { "path": "./packages/shared" }
    ],
    "exclude": [
        "**/node_modules"
    ]
}